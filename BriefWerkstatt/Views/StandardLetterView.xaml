<Window x:Class="BriefWerkstatt.Views.StandardLetterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BriefWerkstatt.Views"
        xmlns:viewmodels="clr-namespace:BriefWerkstatt.ViewModels"
        mc:Ignorable="d"
        Title="BriefWerkstatt - Standardbrief"
        Height="720"
        Width="800"
        MinHeight="720"
        MinWidth="800"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <viewmodels:StandardLetterViewModel />
    </Window.DataContext>
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Row1: Empfänger und Absender -->
        <GroupBox Header="Empfänger"
                  Grid.Row="0"
                  Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.ColumnSpan="2"
                           Text="Vor- und Nachname oder Firma:" />
                <TextBox Grid.Row="1"
                         Grid.ColumnSpan="2"
                         Margin="0 0 0 5"
                         Text="{Binding RecipientName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="3"
                           Grid.ColumnSpan="2"
                           Text="Zusatz 1 (z.B. Wohnhaft bei, Abteilung, etc.):" />
                <TextBox Grid.Row="4"
                         Grid.ColumnSpan="2"
                         Margin="0 0 0 5"
                         Text="{Binding RecipientCareOfInfo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="5"
                           Grid.Column="0"
                           Text="Straße:" />
                <TextBlock Grid.Row="5"
                           Grid.Column="1"
                           Margin="5 0 0 0"
                           Text="Haus-Nr.:" />
                <TextBox Grid.Row="6"
                         Grid.Column="0"
                         Margin="0 0 0 5"
                         Text="{Binding RecipientStreetName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Row="6"
                         Grid.Column="1"
                         Margin="5 0 0 5"
                         Text="{Binding RecipientStreetNumber, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="7"
                           Grid.ColumnSpan="2"
                           Text="Zusatz 2 (z.B. Hinterhaus links):" />
                <TextBox Grid.Row="8"
                         Grid.ColumnSpan="2"
                         Margin="0 0 0 5"
                         Text="{Binding RecipientAdditionalAdressInfo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="9"
                           Grid.Column="0"
                           Text="Postleitzahl:" />
                <TextBlock Grid.Row="9"
                           Grid.Column="1"
                           Margin="5 0 0 0"
                           Text="Ort:" />
                <TextBox Grid.Row="10"
                         Grid.Column="0"
                         Margin="0 0 0 5"
                         Text="{Binding RecipientZipCode, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Row="10"
                         Grid.Column="1"
                         Margin="5 0 0 5"
                         Text="{Binding RecipientCityName, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </GroupBox>

        <GroupBox Header="Absender"
                  Grid.Row="0"
                  Grid.Column="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.ColumnSpan="2"
                           Text="Vor- und Nachname oder Firma:" />
                <TextBox Grid.Row="1"
                         Grid.ColumnSpan="2"
                         Margin="0 0 0 5"
                         Text="{Binding SenderName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="3"
                           Grid.ColumnSpan="2"
                           Text="Zusatz 1 (z.B. Wohnhaft bei, Abteilung, etc.):" />
                <TextBox Grid.Row="4"
                         Grid.ColumnSpan="2"
                         Margin="0 0 0 5"
                         Text="{Binding SenderCareOfInfo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="5"
                           Grid.Column="0"
                           Text="Straße:" />
                <TextBlock Grid.Row="5"
                           Grid.Column="1"
                           Margin="5 0 0 0"
                           Text="Haus-Nr.:" />
                <TextBox Grid.Row="6"
                         Grid.Column="0"
                         Margin="0 0 0 5"
                         Text="{Binding SenderStreetName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Row="6"
                         Grid.Column="1"
                         Margin="5 0 0 5"
                         Text="{Binding SenderStreetNumber, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="7"
                           Grid.ColumnSpan="2"
                           Text="Zusatz 2 (z.B. Hinterhaus links):" />
                <TextBox Grid.Row="8"
                         Grid.ColumnSpan="2"
                         Margin="0 0 0 5"
                         Text="{Binding SenderAdditionalAdressInfo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="9"
                           Grid.Column="0"
                           Text="Postleitzahl:" />
                <TextBlock Grid.Row="9"
                           Grid.Column="1"
                           Margin="5 0 0 0"
                           Text="Ort:" />
                <TextBox Grid.Row="10"
                         Grid.Column="0"
                         Margin="0 0 0 5"
                         Text="{Binding SenderZipCode, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Row="10"
                         Grid.Column="1"
                         Margin="5 0 0 5"
                         Text="{Binding SenderCityName, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </GroupBox>

        <!-- Betreffzeile -->
        <GroupBox Header="Betreff"
                  Grid.Row="1"
                  Grid.ColumnSpan="2">
            <StackPanel>
                <TextBox Text="{Binding TopicLineOne, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Text="{Binding TopicLineTwo, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </GroupBox>

        <!-- Anredezeile -->
        <GroupBox Header="Anrede"
                  Grid.Row="3"
                  Grid.ColumnSpan="2">
            <TextBox Text="{Binding Intro, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>

        <!-- Briefinhalt -->
        <GroupBox Header="Briefinhalt"
                  Grid.Row="4"
                  Grid.ColumnSpan="3">
            <TextBox Height="250"
                     Text="{Binding TextBody, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap"
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"/>
        </GroupBox>

        <!-- Kundennummer, Dateiname und Speichern-Button -->
        <GroupBox Header="Kundennummer"
                  Grid.Row="5"
                  Grid.Column="0">
            <TextBox Text="{Binding CustomerNumber, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>

        <GroupBox Header="Dateiname"
                  Grid.Row="5"
                  Grid.Column="2">
            <TextBox Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>

        <Button Content="Speichern"
                Grid.Row="6"
                Grid.Column="2"
                HorizontalAlignment="Center"
                Command="{Binding Save}" />

        <Button Content="Beispieldaten einfügen"
                Grid.Row="6"
                Grid.Column="0"
                HorizontalAlignment="Left"
                Command="{Binding FillWithExampleData}" />

        <Button Content="Eingabedaten löschen"
                Grid.Row="6"
                Grid.Column="0"
                HorizontalAlignment="Right"
                Command="{Binding DeleteData}" />
    </Grid>
</Window>
