<Window x:Class="BriefWerkstatt.Views.StandardLetterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BriefWerkstatt.Views"
        xmlns:viewmodels="clr-namespace:BriefWerkstatt.ViewModels"
        mc:Ignorable="d"
        Title="BriefWerkstatt - Standardbrief"
        Height="765"
        Width="800"
        MinHeight="765"
        MinWidth="800"
        ResizeMode="NoResize"
        Background="DarkGray"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewmodels:StandardLetterViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="Button"
               x:Key="SaveButton">
            <Setter Property="BorderBrush"
                    Value="{Binding SaveButtonBorderColor}" />
            <Setter Property="BorderThickness"
                    Value="3" />
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontWeight"
                    Value="DemiBold" />
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="FontWeight"
                    Value="Heavy" />
            <Setter Property="BorderThickness"
                    Value="2" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="FontWeight"
                    Value="Regular" />
            <Setter Property="Background"
                    Value="#EEEEDD" />
        </Style>
    </Window.Resources>

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Row1: Absender und Empfänger -->
        <GroupBox Header="Absender"
                  Grid.Row="0"
                  Grid.Column="0"
                  BorderBrush="{Binding SenderGroupBoxBorderColor}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.ColumnSpan="2"
                           Margin="5 0 0 0"
                           Text="Vor- und Nachname:" />
                <TextBox Grid.Row="1"
                         Grid.ColumnSpan="2"
                         Margin="5 0 5 5"
                         Text="{Binding SenderName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="3"
                           Grid.ColumnSpan="2"
                           Margin="5 0 0 0"
                           Text="Zusatz 1 (z.B. Wohnhaft bei) oder leer:" />
                <TextBox Grid.Row="4"
                         Grid.ColumnSpan="2"
                         Margin="5 0 5 5"
                         Text="{Binding SenderCareOfInfo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="5"
                           Grid.Column="0"
                           Margin="5 0 0 0"
                           Text="Straße:" />
                <TextBlock Grid.Row="5"
                           Grid.Column="1"
                           Margin="5 0 0 0"
                           Text="Haus-Nr.:" />
                <TextBox Grid.Row="6"
                         Grid.Column="0"
                         Margin="5 0 0 5"
                         Text="{Binding SenderStreetName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Row="6"
                         Grid.Column="1"
                         Margin="5 0 5 5"
                         Text="{Binding SenderStreetNumber, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="7"
                           Grid.ColumnSpan="2"
                           Margin="5 0 0 0"
                           Text="Zusatz 2 (z.B. Hinterhaus links) oder leer:" />
                <TextBox Grid.Row="8"
                         Grid.ColumnSpan="2"
                         Margin="5 0 5 5"
                         Text="{Binding SenderAdditionalAdressInfo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="9"
                           Grid.Column="0"
                           Margin="5 0 0 0"
                           Text="Postleitzahl:" />
                <TextBlock Grid.Row="9"
                           Grid.Column="1"
                           Margin="5 0 0 0"
                           Text="Ort:" />
                <TextBox Grid.Row="10"
                         Grid.Column="0"
                         Margin="5 0 0 5"
                         Text="{Binding SenderZipCode, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Row="10"
                         Grid.Column="1"
                         Margin="5 0 5 5"
                         Text="{Binding SenderCityName, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </GroupBox>

        <GroupBox Header="Empfänger"
                  Grid.Row="0"
                  Grid.Column="2"
                  BorderBrush="{Binding RecipientGroupBoxBorderColor}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.ColumnSpan="2"
                           Margin="5 0 0 0"
                           Text="Vor- und Nachname oder Firma:" />
                <TextBox Grid.Row="1"
                         Grid.ColumnSpan="2"
                         Margin="5 0 5 5"
                         Text="{Binding RecipientName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="3"
                           Grid.ColumnSpan="2"
                           Margin="5 0 0 0"
                           Text="Zusatz 1 (z.B. Wohnhaft bei, Abteilung, etc.) oder leer:" />
                <TextBox Grid.Row="4"
                         Grid.ColumnSpan="2"
                         Margin="5 0 5 5"
                         Text="{Binding RecipientCareOfInfo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="5"
                           Grid.Column="0"
                           Margin="5 0 0 0"
                           Text="Straße:" />
                <TextBlock Grid.Row="5"
                           Grid.Column="1"
                           Margin="5 0 0 0"
                           Text="Haus-Nr.:" />
                <TextBox Grid.Row="6"
                         Grid.Column="0"
                         Margin="5 0 0 5"
                         Text="{Binding RecipientStreetName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Row="6"
                         Grid.Column="1"
                         Margin="5 0 5 5"
                         Text="{Binding RecipientStreetNumber, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="7"
                           Grid.ColumnSpan="2"
                           Margin="5 0 0 0"
                           Text="Zusatz 2 (z.B. Hinterhaus links) oder leer:" />
                <TextBox Grid.Row="8"
                         Grid.ColumnSpan="2"
                         Margin="5 0 5 5"
                         Text="{Binding RecipientAdditionalAdressInfo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="9"
                           Grid.Column="0"
                           Margin="5 0 0 0"
                           Text="Postleitzahl:" />
                <TextBlock Grid.Row="9"
                           Grid.Column="1"
                           Margin="5 0 0 0"
                           Text="Ort:" />
                <TextBox Grid.Row="10"
                         Grid.Column="0"
                         Margin="5 0 0 5"
                         Text="{Binding RecipientZipCode, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Row="10"
                         Grid.Column="1"
                         Margin="5 0 5 5"
                         Text="{Binding RecipientCityName, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </GroupBox>

        <!-- Betreffzeile -->
        <GroupBox Header="Betreff"
                  Grid.Row="1"
                  Grid.ColumnSpan="2"
                  BorderBrush="{Binding LetterBodyGroupBoxBorderColor}">
            <StackPanel Margin="2 0 2 2">
                <TextBox Text="{Binding TopicLineOne, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Text="{Binding TopicLineTwo, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </GroupBox>

        <!-- Anredezeile -->
        <GroupBox Header="Anrede"
                  Grid.Row="3"
                  Grid.ColumnSpan="2"
                  BorderBrush="{Binding LetterBodyGroupBoxBorderColor}">
            <TextBox Margin="2 0 2 2" 
                     Text="{Binding Intro, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>

        <!-- Briefinhalt -->
        <GroupBox Header="Briefinhalt"
                  Grid.Row="4"
                  Grid.ColumnSpan="3"
                  BorderBrush="{Binding LetterBodyGroupBoxBorderColor}">
            <TextBox Height="250"
                     Margin="2 0 2 2"
                     Padding="0 0 10 0"
                     Text="{Binding TextBody, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     SpellCheck.IsEnabled="True" 
                     TextAlignment="Justify" />
        </GroupBox>

        <!-- Kundennummer, Dateiname und Speichern-Button -->
        <GroupBox Header="Kundennummer"
                  Grid.Row="5"
                  Grid.Column="0"
                  BorderBrush="{Binding FileInfoGroupBoxBorderColor}">
            <TextBox Margin="2 0 2 2" Text="{Binding CustomerNumber, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>

        <GroupBox Header="Dateiname"
                  Grid.Row="5"
                  Grid.Column="2"
                  BorderBrush="{Binding FileInfoGroupBoxBorderColor}">
            <TextBox Margin="2 0 2 2" Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>

        <Button Style="{StaticResource SaveButton}"
                Content="Speichern"
                Margin="0 10 0 5"
                Grid.Row="6"
                Grid.Column="2"
                Padding="10 2 10 2"
                HorizontalAlignment="Center"
                Command="{Binding Save}">
            <Button.Resources>

            </Button.Resources>
        </Button>

        <Button Content="Beispieldaten einfügen"
                Margin="0 10 0 5"
                Padding="5"
                Grid.Row="6"
                Grid.Column="0"
                HorizontalAlignment="Left"
                Command="{Binding FillWithExampleData}" />

        <Button Content="Eingabedaten löschen"
                Margin="0 10 0 5"
                Padding="5"
                Grid.Row="6"
                Grid.Column="0"
                HorizontalAlignment="Right"
                Command="{Binding DeleteData}" />
    </Grid>
</Window>
