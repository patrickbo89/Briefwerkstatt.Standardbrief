<Window x:Class="BriefWerkstatt.Views.StandardLetterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:BriefWerkstatt.ViewModels"
        xmlns:uc="clr-namespace:BriefWerkstatt.Controls"
        mc:Ignorable="d"
        Title="BriefWerkstatt - Standardbrief"
        Height="800"
        Width="800"
        MinHeight="800"
        MinWidth="800"
        ResizeMode="CanMinimize"
        Background="#292929"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <Window.DataContext>
        <viewmodels:StandardLetterViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="Button"
               x:Key="SaveButton">
            <Setter Property="BorderBrush"
                    Value="Green" />
            <Setter Property="BorderThickness"
                    Value="2" />
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontWeight"
                    Value="DemiBold" />
            <Setter Property="FontSize"
                    Value="12" />
            <Setter Property="Foreground"
                    Value="White" />
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Margin"
                    Value="20 10 20 0" />
            <Setter Property="FontWeight"
                    Value="Heavy" />
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Background"
                    Value="#323232" />
            <Setter Property="BorderThickness"
                    Value="0.35" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="FontWeight"
                    Value="Regular" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Background"
                    Value="#55FFFFFF" />
            <Setter Property="CaretBrush"
                    Value="White" />
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius"
                            Value="2" />
                </Style>

                <Style TargetType="ScrollBar">
                    <Setter Property="Background"
                            Value="#303030" />
                    <Setter Property="BorderBrush"
                            Value="#000000" />
                    <Setter Property="Width"
                            Value="5" />
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0"
              Background="#000000"
              Grid.ColumnSpan="3"
              MouseDown="Grid_MouseDown">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="25" />
            </Grid.ColumnDefinitions>

            <Line Grid.ColumnSpan="3"
                  X1="0"
                  X2="800"
                  VerticalAlignment="Bottom"
                  StrokeThickness="1"
                  Stroke="White"
                  Visibility="Visible" />
            <TextBlock Text="Brief Werkstatt - Standardbrief"
                       Foreground="White"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Padding="20 0 0 0"
                       FontFamily="Microsoft Sans Serif"
                       FontWeight="Bold" />
            <Button x:Name="Close"
                    Content="X"
                    Width="25"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0 0 0 0"
                    FontWeight="Bold"
                    Grid.Column="2"
                    Command="{Binding CloseApp}">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background"
                                Value="#000000" />
                        <Setter Property="Foreground"
                                Value="White" />
                        <Setter Property="BorderBrush"
                                Value="Transparent" />
                        <Setter Property="BorderThickness"
                                Value="0" />

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FF0000" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Transparent"
                                BorderThickness="0">

                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="Minimize"
                    Content="_"
                    Width="25"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,4"
                    FontWeight="ExtraBold"
                    Grid.Column="1"
                    Click="MinimizeButton_Click">
                
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background"
                                Value="#000000" />
                        <Setter Property="Foreground"
                                Value="White" />
                        <Setter Property="BorderBrush"
                                Value="Transparent" />
                        <Setter Property="BorderThickness"
                                Value="0" />

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#555555" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Transparent"
                                BorderThickness="0">

                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>

        <!-- Row1: Absender und Empfänger -->
        <GroupBox Header="Absender"
                  Grid.Row="1"
                  Grid.Column="0"
                  BorderBrush="{Binding SenderGroupBoxBorderColor}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.ColumnSpan="2"
                           Margin="5 0 0 0"
                           Text="Vor- und Nachname:" />
                <TextBox Grid.Row="1"
                         Grid.ColumnSpan="2"
                         Margin="5 0 5 5"
                         Text="{Binding SenderName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="3"
                           Grid.ColumnSpan="2"
                           Margin="5 0 0 0"
                           Text="Zusatz 1 (z.B. Wohnhaft bei) oder leer:" />
                <TextBox Grid.Row="4"
                         Grid.ColumnSpan="2"
                         Margin="5 0 5 5"
                         Text="{Binding SenderCareOfInfo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="5"
                           Grid.Column="0"
                           Margin="5 0 0 0"
                           Text="Straße:" />
                <TextBlock Grid.Row="5"
                           Grid.Column="1"
                           Margin="5 0 0 0"
                           Text="Haus-Nr.:" />
                <TextBox Grid.Row="6"
                         Grid.Column="0"
                         Margin="5 0 0 5"
                         Text="{Binding SenderStreetName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Row="6"
                         Grid.Column="1"
                         Margin="5 0 5 5"
                         Text="{Binding SenderStreetNumber, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="7"
                           Grid.ColumnSpan="2"
                           Margin="5 0 0 0"
                           Text="Zusatz 2 (z.B. Hinterhaus links) oder leer:" />
                <TextBox Grid.Row="8"
                         Grid.ColumnSpan="2"
                         Margin="5 0 5 5"
                         Text="{Binding SenderAdditionalAdressInfo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="9"
                           Grid.Column="0"
                           Margin="5 0 0 0"
                           Text="Postleitzahl:" />
                <TextBlock Grid.Row="9"
                           Grid.Column="1"
                           Margin="5 0 0 0"
                           Text="Ort:" />
                <TextBox Grid.Row="10"
                         Grid.Column="0"
                         Margin="5 0 0 5"
                         Text="{Binding SenderZipCode, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Row="10"
                         Grid.Column="1"
                         Margin="5 0 5 5"
                         Text="{Binding SenderCityName, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </GroupBox>

        <GroupBox Header="Empfänger"
                  Grid.Row="1"
                  Grid.Column="2"
                  BorderBrush="{Binding RecipientGroupBoxBorderColor}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.ColumnSpan="2"
                           Margin="5 0 0 0"
                           Text="Vor- und Nachname oder Firma:" />
                <TextBox Grid.Row="1"
                         Grid.ColumnSpan="2"
                         Margin="5 0 5 5"
                         Text="{Binding RecipientName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="3"
                           Grid.ColumnSpan="2"
                           Margin="5 0 0 0"
                           Text="Zusatz 1 (z.B. Wohnhaft bei, Abteilung, etc.) oder leer:" />
                <TextBox Grid.Row="4"
                         Grid.ColumnSpan="2"
                         Margin="5 0 5 5"
                         Text="{Binding RecipientCareOfInfo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="5"
                           Grid.Column="0"
                           Margin="5 0 0 0"
                           Text="Straße:" />
                <TextBlock Grid.Row="5"
                           Grid.Column="1"
                           Margin="5 0 0 0"
                           Text="Haus-Nr.:" />
                <TextBox Grid.Row="6"
                         Grid.Column="0"
                         Margin="5 0 0 5"
                         Text="{Binding RecipientStreetName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Row="6"
                         Grid.Column="1"
                         Margin="5 0 5 5"
                         Text="{Binding RecipientStreetNumber, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="7"
                           Grid.ColumnSpan="2"
                           Margin="5 0 0 0"
                           Text="Zusatz 2 (z.B. Hinterhaus links) oder leer:" />
                <TextBox Grid.Row="8"
                         Grid.ColumnSpan="2"
                         Margin="5 0 5 5"
                         Text="{Binding RecipientAdditionalAdressInfo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="9"
                           Grid.Column="0"
                           Margin="5 0 0 0"
                           Text="Postleitzahl:" />
                <TextBlock Grid.Row="9"
                           Grid.Column="1"
                           Margin="5 0 0 0"
                           Text="Ort:" />
                <TextBox Grid.Row="10"
                         Grid.Column="0"
                         Margin="5 0 0 5"
                         Text="{Binding RecipientZipCode, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Row="10"
                         Grid.Column="1"
                         Margin="5 0 5 5"
                         Text="{Binding RecipientCityName, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </GroupBox>

        <!-- Betreffzeile -->
        <GroupBox Header="Betreff"
                  Grid.Row="2"
                  Grid.ColumnSpan="2"
                  BorderBrush="{Binding LetterBodyGroupBoxBorderColor}">
            <StackPanel Margin="2 0 2 2">
                <TextBox Text="{Binding TopicLineOne, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Margin="0 5 0 0"
                         Text="{Binding TopicLineTwo, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </GroupBox>

        <!-- Anredezeile -->
        <GroupBox Header="Anrede"
                  Grid.Row="3"
                  Grid.ColumnSpan="2"
                  BorderBrush="{Binding LetterBodyGroupBoxBorderColor}">
            <TextBox Margin="2 0 2 2"
                     Text="{Binding Intro, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>

        <!-- Briefinhalt -->
        <GroupBox Header="Briefinhalt"
                  Grid.Row="4"
                  Grid.ColumnSpan="3"
                  BorderBrush="{Binding LetterBodyGroupBoxBorderColor}">
            <TextBox Height="250"
                     Margin="2 0 2 2"
                     Padding="0 0 10 0"
                     Text="{Binding TextBody, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     SpellCheck.IsEnabled="True"
                     TextAlignment="Justify" />
        </GroupBox>

        <Grid Grid.Row="6"
              Grid.ColumnSpan="3"
              Margin="0 20 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="1.8*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!-- Kundennummer, Dateiname und Speichern-Button -->
            <GroupBox Header="Kundennummer"
                      Grid.Row="6"
                      Grid.Column="0"
                      Width="170"
                      Margin="0 0 0 0"
                      BorderBrush="{Binding FileInfoGroupBoxBorderColor}">
                <TextBox Margin="2 0 2 2"
                         Width="150"
                         Text="{Binding CustomerNumber, UpdateSourceTrigger=PropertyChanged}" />
            </GroupBox>

            <GroupBox Header="Dateiname"
                      Grid.Row="6"
                      Grid.Column="1"
                      Margin="0 0 20 0"
                      BorderBrush="{Binding FileInfoGroupBoxBorderColor}">
                <TextBox Margin="2 0 2 2"
                         Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}" />
            </GroupBox>

            <Button Content="Speichern"
                    Margin="2 10 12 2"
                    Grid.Row="6"
                    Grid.Column="2"
                    Foreground="White"
                    FontWeight="ExtraBlack"
                    FontSize="14"
                    HorizontalAlignment="Center"
                    Command="{Binding Save}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background"
                                Value="Green" />
                        <Setter Property="Cursor"
                                Value="Hand" />
                        <Setter Property="BorderBrush"
                                Value="Transparent" />

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#008C00" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="175"
                                Height="35"
                                CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Transparent"
                                BorderThickness="0">

                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
        <!--<Button Style="{StaticResource SaveButton}"
                Content="Speichern"
                Margin="0 10 0 5"
                Grid.Row="6"
                Grid.Column="2"
                Padding="10 2 10 2"
                HorizontalAlignment="Center"
                Command="{Binding Save}">
            <Button.Resources>

            </Button.Resources>
        </Button>-->



        <Button Content="Beispieldaten einfügen"
                Margin="0 10 0 5"
                Padding="5"
                Grid.Row="2"
                Grid.Column="2"
                HorizontalAlignment="Left"
                Foreground="Transparent"
                Background="Transparent"
                BorderBrush="Transparent"
                Command="{Binding FillWithExampleData}" />

        <Button Content="Eingabedaten löschen"
                Margin="0 10 0 5"
                Padding="5"
                Grid.Row="2"
                Grid.Column="2"
                HorizontalAlignment="Right"
                Foreground="Transparent"
                Background="Transparent"
                BorderBrush="Transparent"
                Command="{Binding DeleteData}" />
    </Grid>
</Window>
